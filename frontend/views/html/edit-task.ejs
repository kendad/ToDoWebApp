<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/input_form.css">
    <title>TO-DO-APP</title>
</head>
<body>
    <div id="editTaskModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
          <div class="modal-content modal-background">
            <div class="d-flex justify-content-center">
              <img src="../icons/notes.png">
              <h1 class="h1-text">UPDATE-TASK</h1>
            </div>
            <div class="d-flex justify-content-center">
              <div class="d-flex flex-column justify-content-center input-form-container">
                <form action="/edit-task/<%= TaskID %>/<%= jsonData.owner %>/" method="POST">
                  <label for="title" class="label-text">Title:</label>
                  <input class="input-text" type="text" id="title" name='title' value="<%= jsonData.title %>">
                  <br>
                  <br>
                  <br>
                  <label for="collab" class="label-text">Add Collaborators:</label>
                  <div class="add-user-container">
                  <select class="form-select form-select-design" aria-label="Default select example" name="users-list" id="users-list" multiple>
                    <% usersList.forEach((data)=>{ %>
                        <% if(jsonData.owner.includes(data.id)){ %>
                            <% return %>
                        <% } else{ %>
                            <option value="<%= data.id %>"><%= data.username %></option>
                        <% } %>
                    <% }) %>
                  </select>
                  </div>
                  <div class="d-flex justify-content-center">
                    <button type="submit" class="input-button-text">UPDATE</button>
                  </div>
                </form>
                <div class="d-flex justify-content-center">
                    <form action="/delete-task/<%= TaskID %>" method="POST">
                        <button type="submit" class="input-button-text">DELETE</button>
                    </form>
                </div>
              </div>
            </div>
            
              <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button> -->
          </div>
        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>